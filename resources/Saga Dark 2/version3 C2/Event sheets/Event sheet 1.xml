<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Event sheet 1</name>
    <events>
        <event-block>
            <conditions>
                <condition id="-2" name="On start of layout" type="System" />
            </conditions>
            <actions>
                <action behavior="Pin" id="0" name="Pin to object" type="AzcarImages">
                    <param id="0" name="Pin to">Azcar</param>
                </action>
                <action id="4" name="Set animation" type="AzcarImages">
                    <param id="0" name="Animation">&quot;Parado&quot;</param>
                    <param id="1" name="From">1</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition behavior="Platform" id="8" name="On moved" type="Azcar" />
            </conditions>
            <actions>
                <action id="4" name="Set animation" type="AzcarImages">
                    <param id="0" name="Animation">&quot;Andando&quot;</param>
                    <param id="1" name="From">1</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition behavior="Platform" id="7" name="On stopped" type="Azcar" />
            </conditions>
            <actions>
                <action id="4" name="Set animation" type="AzcarImages">
                    <param id="0" name="Animation">&quot;Parado&quot;</param>
                    <param id="1" name="From">1</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="2" name="Key is down" type="Keyboard">
                    <param id="0" name="Key">39 (Right arrow)</param>
                </condition>
            </conditions>
            <actions>
                <action id="7" name="Set mirrored" type="AzcarImages">
                    <param id="0" name="State">1</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="2" name="Key is down" type="Keyboard">
                    <param id="0" name="Key">37 (Left arrow)</param>
                </condition>
            </conditions>
            <actions>
                <action id="7" name="Set mirrored" type="AzcarImages">
                    <param id="0" name="State">0</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
